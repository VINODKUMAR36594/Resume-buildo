{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/src/*"],
      "@components/*": ["frontend/src/components/*"],
      "@utils/*": ["frontend/src/utils/*"],
      "@assets/*": ["frontend/src/assets/*"],
      "@backend/*": ["backend/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "frontend/src/**/*",
    "backend/**/*",
    "*.js",
    "*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
